								function checkPassword() {
									const password = document.getElementById("password").value;
									const correctPassword = "fisga2024"; // Substitua pela sua senha
									const errorMessage = document.getElementById("errorMessage");
						
									if (password === correctPassword) {
										window.open("https://drive.google.com/drive/folders/10lSMUrMEpvWcLhmZT0fZapKq4KHbW87S?usp=drive_link", "_blank") // Substitua pela URL da sua pasta do Google Drive
									} else {
										document.getElementById("errorMessage").style.display = "block"; // Exibe a mensagem de erro
									}
								}
